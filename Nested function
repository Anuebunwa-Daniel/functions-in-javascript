//2. create another function inside sayMyName, call it: nestedFunction
// Declare nestedFunction with a paramenter value as well.
//3. print out a message containing your name in the nestedFunction that you created.

 var what = window.prompt ('whats your name?');
 function sayMyName(name){
    
    function nestedFunction (what){
        console.log('welcome ' + what);

    }
    nestedFunction(name);
 }
sayMyName(what);

